# change focus within space (or display if no space)
ctrl + alt + cmd - up : yabai -m window --focus north || yabai -m display --focus north
ctrl + alt + cmd - down : yabai -m window --focus south || yabai -m display --focus south
ctrl + alt + cmd - left : yabai -m window --focus west || yabai -m display --focus west
ctrl + alt + cmd - right : yabai -m window --focus east || yabai -m display --focus east

# swap windows (display only)
ctrl + alt + cmd - w : yabai -m display --focus north
ctrl + alt + cmd - s : yabai -m display --focus south
ctrl + alt + cmd - a : yabai -m display --focus west
ctrl + alt + cmd - d : yabai -m display --focus east

# swap windows within space (or display if no space)
ctrl + alt + cmd + shift - up : yabai -m window --swap north || yabai -m window --display north
ctrl + alt + cmd + shift - down : yabai -m window --swap south || yabai -m window --display south
ctrl + alt + cmd + shift - left : yabai -m window --swap west || yabai -m window --display west
ctrl + alt + cmd + shift - right : yabai -m window --swap east || yabai -m window --display east

# swap windows (display only)
ctrl + alt + cmd + shift - w : yabai -m window --display north
ctrl + alt + cmd + shift - s : yabai -m window --display south
ctrl + alt + cmd + shift - a : yabai -m window --display west
ctrl + alt + cmd + shift - d : yabai -m window --display east

# move window between spaces
ctrl + alt + cmd + shift - 0x21 : yabai -m window --focus prev # 0x21 is [
ctrl + alt + cmd + shift - 0x1E : yabai -m window --space next # 0x1E is ]

# move window to space
ctrl + alt + cmd + shift - 1 : yabai -m window --space 1
ctrl + alt + cmd + shift - 2 : yabai -m window --space 2
ctrl + alt + cmd + shift - 3 : yabai -m window --space 3
ctrl + alt + cmd + shift - 4 : yabai -m window --space 4
ctrl + alt + cmd + shift - 5 : yabai -m window --space 5
ctrl + alt + cmd + shift - 6 : yabai -m window --space 6
ctrl + alt + cmd + shift - 7 : yabai -m window --space 7
ctrl + alt + cmd + shift - 8 : yabai -m window --space 8
ctrl + alt + cmd + shift - 9 : yabai -m window --space 9

# move window and split
ctrl + alt + cmd + shift - k : yabai -m window --warp north
ctrl + alt + cmd + shift - j : yabai -m window --warp south
ctrl + alt + cmd + shift - h : yabai -m window --warp west
ctrl + alt + cmd + shift - l : yabai -m window --warp east

# maximize a window
ctrl + alt + cmd - m : yabai -m window --toggle zoom-fullscreen
# balance out tree of windows (resize to occupy same area)
ctrl + alt + cmd - n : yabai -m space --balance

# rotate layout clockwise
ctrl + alt + cmd - r : yabai -m space --rotate 270
# flip along x-axis
ctrl + alt + cmd - x : yabai -m space --mirror x-axis
# flip along y-axis
ctrl + alt + cmd - y : yabai -m space --mirror y-axis
# toggle window float
ctrl + alt + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# system settings
# move left a space - ctrl + alt + cmd + ,
# move right a space - ctrl + alt + cmd + .
# move to space 1 - ctrl + alt + cmd + 1
# move to space 2 - ctrl + alt + cmd + 2
# etc

# testing
ctrl + alt + cmd - z : say caps z
ctrl + alt + cmd + shift - z : say caps shift z
