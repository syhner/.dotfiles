# change focus within space
ctrl - up : yabai -m window --focus north
ctrl - down : yabai -m window --focus south
ctrl - left : yabai -m window --focus west
ctrl - right : yabai -m window --focus east

# change focus between external displays
ctrl - 0x1B : yabai -m display --focus west # 0x1B is -
ctrl - 0x18 : yabai -m display --focus east # 0x18 is =

# swap windows
ctrl + shift - up : yabai -m window --swap north
ctrl + shift - down : yabai -m window --swap south
ctrl + shift - left : yabai -m window --swap west
ctrl + shift - right : yabai -m window --swap east

# move window between spaces
ctrl + shift - 0x2B : yabai -m window --space prev # 0x2B is ,
ctrl + shift - 0x2F : yabai -m window --space next # 0x2F is .

# move window to space
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6
ctrl + shift - 7 : yabai -m window --space 7

# move window and split
ctrl + alt - up : yabai -m window --warp north
ctrl + alt - down : yabai -m window --warp south
ctrl + alt - left : yabai -m window --warp west
ctrl + alt - right : yabai -m window --warp east

# maximize a window
ctrl - m : yabai -m window --toggle zoom-fullscreen
# balance out tree of windows (resize to occupy same area)
ctrl - b : yabai -m space --balance

# rotate layout clockwise
ctrl - r : yabai -m space --rotate 270
# flip along x-axis
ctrl - x : yabai -m space --mirror x-axis
# flip along y-axis
ctrl - y : yabai -m space --mirror y-axis
# toggle window float
ctrl - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# testing
shift + ctrl + alt + cmd - t : say test
